{{#each reviewList}}
    <div class="card mb-4">
        <div class="card-header ms-3 mt-3">
            {{#with title}}
                <h4>{{userName}}</h4>
                <p>{{caption}}</p>
                <p>{{date}}</p>
            {{/with}}
        </div>
        <div class="card-body ms-3 ">
            {{#with reviewBody}}
                <p>{{seller.title}}: {{seller.value}}</p>
                <p>{{rating.title}}: {{rating.value}}</p>
                {{#each text}}
                    {{this}}
                {{/each}}
                <p class="mt-3 mb-0"><b>{{advantages.title}}:</b></p>
                <div>{{advantages.text}}</div>
                <p class="mt-3 mb-0"><b>{{disadvantages.title}}:</b></p>
                <div>{{disadvantages.text}}</div>
                {{#each images}}
                    <img src="{{this}}" alt="alt">
                {{/each}}
                {{#each coments}}
                    <div class="card mt-4 ms-5">
                        <div class="card-body ms-3">
                            <h4>{{userName}}</h4>
                            <p>{{date}}</p>
                            <p>{{text}}</p>
                        </div>
                    </div>
                {{/each}}
            {{/with}}
        </div>
    </div>
{{/each}}