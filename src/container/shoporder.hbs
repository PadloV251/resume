<main class="p-5">
    <div class="row">
        {{#with navigation}}
            <div class="col-12">
                <div class="nav">
                    {{#each links}}
                        <div class="nav-item">
                            <a href="{{href}}" class="nav-link {{#unless href}}disabled{{/unless}}">{{text}}</a>
                        </div>
                    {{/each}}
                </div>
            </div>
        {{/with}}
        <hr class="mt-3">
        <h1 class="text-header my-5">{{header}}</h1>
        
            <div class="col-8">
                {{#with contacts_data}}
                <h3 class="mb-3">{{title}}</h3>
                <div>
                    {{#each buttons}}
                        <button type="button" class="btn {{#if isOutline}}btn btn-outline-warning{{else}}btn btn-warning {{/if}}">{{text}}</button>
                    {{/each}}
                </div>
                {{#with form}}
                    {{#with input}}
                        {{#with surname}}
                            <div class="row">
                                <div class="col-6 mt-3">
                                    <label for="#" class="form-label">{{label}}</label>
                                    <input placeholder="{{placeholder}}" class="form-control">
                                    <div class="form-text">{{caption}}</div>
                                </div>
                            {{/with}}
                            {{#with name}}
                                <div class="col-6 mt-3">
                                    <label for="#" class="form-label">{{label}}</label>
                                    <input placeholder="{{placeholder}}" class="form-control">
                                    <div class="form-text">{{caption}}</div>
                                </div>
                            {{/with}}
                            {{#with phone}}
                                <div class="col-6 mt-3">
                                    <label for="#" class="form-label">{{label}}</label>
                                    <input placeholder="{{placeholder}}" class="form-control">
                                    <div class="form-text">{{caption}}</div>
                                </div>
                            {{/with}}
                            {{#with email}}
                                <div class="col-6 mt-3">
                                    <label for="#" class="form-label">{{label}}</label>
                                    <input placeholder="{{placeholder}}" class="form-control">
                                    <div class="form-text">{{caption}}</div>
                                </div>
                            {{/with}}
                        </div>
                    {{/with}}
                    <hr class="mt-5 mb-5">
                    {{#each switch}}
                        <div class="form-check form-switch {{#if @first}}mb-3{{/if}}">
                            <label for="#" class="form-check-label">{{text}}</label>
                            <input name="sale" type="checkbox" class="form-check-input"{{#if isActive}} checked {{/if}}>
                        </div>
                    {{/each}}
                {{/with}}
                <hr class="mt-5"> 
                {{/with}}
                {{#with delivery}}
                    <h3 class="mt-4 mb-3">{{title}}</h3>
                    <div class="card">
                        <div class="card-body">
                            {{#each select}}
                                <label for="#" class="form-label">{{label}}</label>
                                <select class="form-select">
                                    <div class="col-6">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                        <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                    </div>
                                </select>
                            {{/each}}
                        </div>
                    </div>
                    {{#each delivery_type}}
                        <div class="form-check mt-4">
                            <label for="#" class="form-check-label">{{type}}</label>
                            <input name="food" type="radio" class="form-check-input" {{#if @first}} checked {{/if}}>
                        </div>
                    {{/each}}
                    <hr class="mt-5 mb-3">
                    {{#with payment}}
                        <h3 class="mt-4">{{title}}</h3>
                            {{#each list}}
                                <div class="form-check mt-4">
                                    <label for="#" class="form-check-label">{{type}}</label>
                                    <input name="food" type="radio" class="form-check-input" {{#if @first}} checked {{/if}}>
                                    <div class="form-text">{{description}}</div>
                                </div>
                            {{/each}}
                    {{/with}}
                    <hr class="mt-5">
                    {{#with contact}}
                        <h3 class="mt-5 mb-3">{{title}}</h3>
                        {{#with surname}}
                        <div class="row">
                            <div class="col-6 mt-3">
                                <label for="#" class="form-label">{{label}}</label>
                                <input placeholder="{{placeholder}}" class="form-control">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        {{/with}}
                        {{#with name}}
                            <div class="col-6 mt-3">
                                <label for="#" class="form-label">{{label}}</label>
                                <input placeholder="{{placeholder}}" class="form-control">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        {{/with}}
                        {{#with phone}}
                            <div class="col-6 mt-3">
                                <label for="#" class="form-label">{{label}}</label>
                                <input placeholder="{{placeholder}}" class="form-control">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        {{/with}}
                        {{#with email}}
                            <div class="col-6 mt-3">
                                <label for="#" class="form-label">{{label}}</label>
                                <input placeholder="{{placeholder}}" class="form-control">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        </div>
                        {{/with}}
                    {{/with}}
                    <hr class="mt-5">
                    {{#with coment}}
                        <label for="#" class="form-label">{{label}}</label>
                        <input placeholder="{{placeholder}}" class="form-control">
                    {{/with}}
                    <hr class="mt-5">
                {{/with}}
                {{#with coupon}}
                    <h3 class="mt-5 mb-3">{{title}}</h3>
                    {{#with select}}
                        {{#with availabel_coupon}}
                            <div class="col-12">
                                <label for="#" class="form-label">{{label}}</label>
                                <select class="form-select form-select-lg">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                        <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        {{/with}}
                        {{#with friend_coupon}}
                            <div class="col-12">
                                <label for="#" class="form-label mt-4">{{label}}</label>
                                <select class="form-select form-select-sg">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                        <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        {{/with}}
                    {{/with}}
                    {{#with add}}
                        {{#with friend}}
                            <div class="col-12">
                                <label for="#" class="form-label mt-4">{{label}}</label>
                                <input placeholder="{{placeholder}}" class="form-control form-control-lg">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        {{/with}}
                        {{#with colleague}}
                            <div class="col-12">
                                <label for="#" class="form-label mt-4">{{label}}</label>
                                <input placeholder="{{placeholder}}" class="form-control form-control-sg">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        {{/with}}
                    {{/with}}
                {{/with}}
            </div>
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    <div class="nav flex-column">
                        {{#each action_block}}
                            <button type="button" class="btn my-2 {{#if isSuccess}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}} {{#if isInfo}}btn-info{{/if}}">{{text}}</button>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{#with total}}
                <div class="card">
                    <h3 class="ms-3 mt-3">{{title}}</h3>
                    <div class="card-body">
                        {{#each item_list}}
                            <p>{{name}}: {{price}}</p>
                        {{/each}}
                    </div>
                    <hr>
                    {{#each additional_info}}
                        <p class="ms-3">{{text}}: {{value}}</p>
                    {{/each}}
                    <hr>
                    {{#with total_price}}
                        <p class="ms-3">{{text}}: {{value}}</p>
                    {{/with}}
                    <hr>
                    {{#each button}}
                        <button class="btn mx-4 my-2 {{#if isPrimary}}btn-primary{{/if}} {{#if isOutline}}btn-outline-primary{{/if}}">
                            {{text}}
                        </button>
                    {{/each}}
                </div>
            {{/with}}
        </div>
    </div>
</main>