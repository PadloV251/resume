<main class="p-5">
    <div class="row">
        {{#with navigation}}
            <div class="col-12">
                <div class="nav">
                    {{#each links}}
                        <div class="nav-item">
                            <a href="{{href}}" class="nav-link">{{text}}</a>
                        </div>
                    {{/each}}
                </div>
            </div>
        {{/with}}
        <hr class="mt-3 mb-5">
        {{#with header}}
            <h1 class="mt-5">{{title}}</h1>
            {{#with button}}
                <div class="col-4 mt-2">
                    <a href="{{link}}" class="btn btn-outline-dark">{{text}}</a>
                </div>
            {{/with}}
        {{/with}}
        <hr class="mt-5">
        {{#each goodsBlock}}
            {{> cartGoodsItem}}
        {{/each}}
        <hr class="my-5">
        {{#with total}}
            <h3 class="mb-3">{{title}}</h3>
            <h2>{{amount}}</h2>
            <p>{{delivery}}</p>
            <div class="col-3">
                {{#each buttons}}
                    <a href="{{link}}" class="btn mb-3 {{#if isSuccess}}btn-success{{else}}btn-outline-success{{/if}}">{{text}}</a>
                {{/each}}
            </div>
        {{/with}}
        <hr class="my-5">
        {{#with goodsOtherBlock}}
            <h3 class="text-center mb-4">{{title}}
            </h3>
            {{#each cards}}
                <div class="col-4">
                    <div class="card">
                        <img src="{{image}}" alt="alt">
                        <div class="card-body">
                            <h5 class="card-title">{{title}}</h5>
                            {{#if isHot}}
                                <span class="badge text-bg-warning rounded-pill mb-3">HOT!</span>
                            {{/if}}
                            {{#if isNew}}
                                <span class="badge text-bg-primary rounded-pill mb-3">New</span>
                            {{/if}}
                            <p class="card-text">{{description}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{/with}}
        <hr class="my-5">
        {{#with subscribe}}
            <div class="card text-bg-dark">
                <div class="card-body">
                    <h2 class="card-title">{{header}}</h2>
                    <p class="card-text">{{description}}</p>
                    {{#each buttons}}
                        <div class="col-3">
                            <a href="{{link}}" class="btn btn-primary mb-3">{{text}}</a>
                        </div>
                    {{/each}}
                </div>
            </div>
        {{/with}}
        <hr class="my-5">
        <div class="row">
            {{#each footer}}
            <div class="col-2 list-group">
                <ul class="nav flex-column">
                    {{#each this}}
                    <li class="nav-item my-2">
                        <a href="{{link}}" class="nav-link {{#if @last}}disabled{{/if}} list-item" target="_blank">
                            {{text}}
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
            {{/each}}
        </div>
    </div>
</main>