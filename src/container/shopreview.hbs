<main class="p-5">
    <div class="row">
        {{#with navigation}}
            <div class="col-12">
                <div class="nav">
                    {{#each links}}
                        <div class="nav-item">
                            <a href="{{href}}" class="nav-link">{{text}}</a>
                        </div>
                    {{/each}}
                </div>
            </div>
        {{/with}}
        <hr class="mt-3 mb-5">
        {{#with formBlock}}
            <div class="col-8">
                <h1 class="mb-4">{{header}}</h1>
                {{#with rating}}
                    <h6>{{title}}: {{value}}</h6>
                {{/with}}
                {{#with actionBlock}}
                    <div class="nav nav-tabs mt-4">
                        {{#each tabs}}
                            <div class="nav-item">
                                <a href="#" class="nav-link {{#if isActive}}active{{/if}}">{{text}}</a>
                            </div>
                        {{/each}}
                    </div>
                    <hr class="my-5">
                    {{#with report}}
                        <div class="card p-2">
                            <h5 class="p-2">{{title}}</h5>
                            <div class="col-3 m-2">
                                <a href="{{button.link}}" class="btn btn-dark">{{button.text}}</a>
                            </div>
                        </div>
                    {{/with}}
                {{/with}}
                <hr class="my-5">
                {{#with feedbackBlock}}
                    <h3 class="mb-5">{{title}}</h3>
                    {{#each buttons}}
                        <a href="{{link}}" class="btn  {{#if isWarning}}btn-warning{{/if}} {{#if isSuccess}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}}">{{text}}</a>
                    {{/each}}
                {{/with}}
            </div>
            
            <div class="col-4">
                {{#with goodsInfo}}
                    <div class="card mb-3">
                        <img src="{{photo}}" alt="alt" class="p-4">
                        <h6 class="ms-4 mb-3">{{name}}</h6>
                    </div>
                    <div class="card mb-3">
                        <div class="card-body">
                            <p>{{price}}</p>
                            <p>{{#if inMarket}}Есть в наличии{{/if}}</p>
                            {{#each buttons}}
                                <div class="col-12 mb-3">
                                    <a href="{{link}}" class="btn {{#if isPrimary}}btn-primary{{else}}btn-secondary{{/if}}">{{text}}</a>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                    <div class="card">
                        <p class="ms-3 mt-3">{{seller.title}}: <b>{{seller.value}}</b></p>
                    </div>
                {{/with}}
            </div>
        {{/with}}
        <hr class="my-5">
        <div class="col-12">

        {{> reviewItem}}
        
        <hr class="my-5">
            {{#with service}}
                <div class="col-12 mt-5">
                    <div class="card text-center text-bg-success">
                        <div class="card-header">
                            <h2 class="text-title">{{title}}</h2>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{description}}</p>
                            {{#each buttons}}
                                <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                            {{/each}}
                        </div>
                    </div>
                </div>
            {{/with}}
            <hr class="my-5">
            <div class="row">
                {{#each footer}}
                    <div class="col-2 list-group">
                        <ul class="nav flex-column">
                            {{#each this}}
                            <li class="nav-item my-2">
                                <a href="{{link}}" class="nav-link {{#if @last}}disabled{{/if}} list-item" target="_blank">
                                    {{text}}
                                </a>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</main>